{
  "HostingLocation": "Local",
  "AppName": "Elysium MQTT",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": ["Serilog.Sinks.File", "Serilog.Sinks.Console"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [{
      "Name": "Console",
        "Args": {
            "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter,Serilog.Formatting.Compact"
        }
    }, {
      "Name": "File",
      "Args": {
        "path": "/logs/log-.log",
        "rollOnFileSizeLimit": true,
        "formatter": {
          "type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
          "template": "{@t:yyyy-MM-dd HH:mm:ss.fff zzz} {MachineName} - {HostingLocation} - {EnvironmentName} - {AppName} - {AssemblyVersion} [{Coalesce(EventId.Id, 0)}-{Coalesce(EventId.Name, 'None')}] - {@l:u3} - {ThreadId} - {Substring(SourceContext, LastIndexOf(SourceContext, '.') + 1)}.{Method}:{LineNumber} - {@m}\n{@x}"
        },
        "rollingInterval": "Day"
      }
    }],
    "Enrich": ["FromLogContext", "WithThreadId", "WithMachineName", "WithEnvironmentName", "WithAssemblyVersion", "WithCaller"]
  }
}
