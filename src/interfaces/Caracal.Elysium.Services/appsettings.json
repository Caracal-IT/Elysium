{
  "HostingLocation": "Local",
  "AppName": "Elysium MQTT",
  "Ingress": [
    {
      "Id": "362AE922-A0F9-4630-8F95-BF7FAC8CAD07",
      "Name": "Default Ingress",
      "Assembly": "Caracal.Messaging.Ingress",
      "Type": "Caracal.Messaging.Ingress.DefaultIngress",
      "IsEnabled": true,
      "IsDefault": true,
      "Settings": {
        "Address": "localhost",
        "Port": 1883,
        "Topic": "elysium/#"
      }
    }
  ],
  "Routing": {
    "Processors": [
      {
        "Id": "B6FCA905-A951-4AA8-9A98-74AA5A60C232",
        "Name": "Default Processor",
        "Assembly": "Caracal.Messaging.Routing",
        "Type": "Caracal.Messaging.Routing.DefaultProcessor",
        "IsEnabled": true,
        "IsDefault": true,
        "Terminals": ["BC29BADC-0EAD-493C-B5AE-95AAF2EC1490", "C0742026-657C-4556-B34A-8FB75C72FD4C"]
      }
    ],
    "Terminals": [
      {
        "Id": "C0742026-657C-4556-B34A-8FB75C72FD4C",
        "Name": "Default Terminal",
        "Assembly": "Caracal.Messaging.Routing",
        "Type": "Caracal.Messaging.Routing.NullTerminal",
        "IsEnabled": true,
        "IsDefault": true,
        "Settings": {}
      },
      {
        "Id": "BC29BADC-0EAD-493C-B5AE-95AAF2EC1490",
        "Name": "Default Mqtt Terminal",
        "Assembly": "Caracal.Messaging.Mqtt",
        "Type": "Caracal.Messaging.Mqtt.MqttTerminal",
        "IsEnabled": true,
        "IsDefault": false,
        "Settings": {
          "Address": "localhost",
          "Port": 1883
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": ["Serilog.Sinks.File", "Serilog.Sinks.Console"],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Caracal": "Debug"
      }
    },
    "WriteTo": [{
      "Name": "Console",
        "Args": {
            "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter,Serilog.Formatting.Compact"
        }
    }, {
      "Name": "File",
      "Args": {
        "path": "/logs/log-.log",
        "rollOnFileSizeLimit": true,
        "formatter": {
          "type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
          "template": "{@t:yyyy-MM-dd HH:mm:ss.fff zzz} {MachineName} - {HostingLocation} - {EnvironmentName} - {AppName} - {AssemblyVersion} [{Coalesce(EventId.Id, 0)}-{Coalesce(EventId.Name, 'None')}] - {@l:u3} - {ThreadId} - {Substring(SourceContext, LastIndexOf(SourceContext, '.') + 1)}.{Method}:{LineNumber} - {@m}\n{@x}"
        },
        "rollingInterval": "Day"
      }
    }],
    "Enrich": ["FromLogContext", "WithThreadId", "WithMachineName", "WithEnvironmentName", "WithAssemblyVersion"]
  }
}
