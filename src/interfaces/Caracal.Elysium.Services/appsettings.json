{
  "HostingLocation": "Local",
  "AppName": "Elysium MQTT",
  "Routing": {
    "Clients": [
      {
        "Id": "B6FCA905-A951-4AA8-9A98-74AA5A60C232",
        "Name": "Default Client",
        "Type": "Caracal.Elysium.Mqtt.Clients.MqttClient",
        "IsEnabled": true,
        "IsDefault": true,
        "Terminals": ["C0742026-657C-4556-B34A-8FB75C72FD4C"]
      }
    ],
    "Terminals": [
      {
        "Id": "C0742026-657C-4556-B34A-8FB75C72FD4C",
        "Name": "Default Terminal",
        "Type": "Caracal.Elysium.Mqtt.Clients.MqttClient",
        "IsEnabled": true,
        "IsDefault": true,
        "Settings": {}
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": ["Serilog.Sinks.File", "Serilog.Sinks.Console"],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Caracal": "Debug"
      }
    },
    "WriteTo": [{
      "Name": "Console",
        "Args": {
            "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter,Serilog.Formatting.Compact"
        }
    }, {
      "Name": "File",
      "Args": {
        "path": "/logs/log-.log",
        "rollOnFileSizeLimit": true,
        "formatter": {
          "type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
          "template": "{@t:yyyy-MM-dd HH:mm:ss.fff zzz} {MachineName} - {HostingLocation} - {EnvironmentName} - {AppName} - {AssemblyVersion} [{Coalesce(EventId.Id, 0)}-{Coalesce(EventId.Name, 'None')}] - {@l:u3} - {ThreadId} - {Substring(SourceContext, LastIndexOf(SourceContext, '.') + 1)}.{Method}:{LineNumber} - {@m}\n{@x}"
        },
        "rollingInterval": "Day"
      }
    }],
    "Enrich": ["FromLogContext", "WithThreadId", "WithMachineName", "WithEnvironmentName", "WithAssemblyVersion"]
  }
}
